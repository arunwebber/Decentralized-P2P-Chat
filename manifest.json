{
  "manifest_version": 3,
  "name": "Stranger P2P Chat (Decentralized MVP)",
  "description": "Anonymous, browser-based P2P chat with manual signaling. Omegle-style Next/Leave.",
  "version": "0.1.0",
  "action": {
    "default_title": "Stranger P2P Chat"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
